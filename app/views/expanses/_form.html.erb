<%=form_for expanse, url: "/groups/#{@group.id}/expanses", remote: true do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>
 
    <div>
      <%= form.label :description %><br>
      <%= form.text_field :description %>
    </div>
 
    <div>
      <%= form.label :amount %><br>
      <%= form.text_field :amount %>
    </div>
 
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>