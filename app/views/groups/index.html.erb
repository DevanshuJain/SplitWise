<h1>Groups</h1>

<%= link_to "New Article", new_group_path %>
<table class="table">
    <thead>
      <tr>
       <th>Title</th>
       <th>Description</th>
       <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td ><%= link_to "#{group.Group_name}", group_expanses_path(group.id) %></td>
          <td ><%= link_to 'Edit', edit_group_path(group.id) %></td>
          <td ><%= link_to "Destroy", group_path(group.id),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
